# Bandit configuration for PendingChangesBot-ng
# Skip certain tests that are not relevant for this project

[bandit]
exclude_dirs = tests, test_*, venv, .venv, __pycache__
skips = B101, B601, B603, B607

# B101: Skip assert_used test (Django uses assertions for validation)
# B601: Skip shell_injection_subprocess test (we use subprocess safely
# B603: Skip subprocess_without_shell_equals_true test (we use shell=True safely)
# B607: Skip hardcoded_password_string test (we don't hardcode passwords)
